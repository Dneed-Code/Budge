<div class="row align-items-center justify-content-center h-100">
    <div class="col-md-4">
        <div class="card tile">
            <div class="card-body">
                <div class="text-center mb-4">
                <h1 class="" style="color:#acb0c3; font-family:'Nunito', sans-serif">Sign In</h1>
                <p class="" style="color:#acb0c3">Log in to your account to continue.</p>
                {{> messages}}
                </div>
                <form action="/users/login" method="POST">
                    <div>
                        <div id="username-field" class="field-wrapper input mt-3">
                            <label for="email">EMAIL ADDRESS</label>
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                                 fill="none" stroke="#288db9" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="feather feather-user">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            <input class="form-control"
                                   type="email"
                                   name="email"
                                   placeholder="Enter Email"
                            />
                        </div>
                        <div id="password-field" class="field-wrapper input mb-2 mt-3">
                            <div class="d-flex">
                                <label for="password">PASSWORD </label>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                                     fill="none" stroke="#288db9" stroke-width="2" stroke-linecap="round"
                                     stroke-linejoin="round" class="feather feather-lock">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                </svg>
                            </div>
                            <input id="password" name="password" type="password" class="form-control"
                                   placeholder="Enter Password">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
                    <p class="signup-link mt-2">Not registered? <a href="/register" style="color: #2F96B4; text-decoration: underline">Create an account</a></p>
                </form>
            </div>
        </div>
    </div>
</div>

