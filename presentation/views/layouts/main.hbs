<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{{{title}}}</title>

    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
          integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <!-- Datatable css -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/libraries/datatable.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/libraries/datatabledt.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/libraries/datatablemt.css">

    <!-- Font Awesome JS -->
    <script src="https://kit.fontawesome.com/91e2863daf.js" crossorigin="anonymous"></script>
    <!-- Chart JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <!-- jQuery CDN -->
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <!-- toastr css & js   -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/libraries/toastr.css">
    <script src="/stylesheets/libraries/toastr.min.js"></script>
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/libraries/apex-widgets.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/libraries/apexcharts.css">

    <script src="javascripts/apexcharts.min.js"></script>
    <script src="javascripts/apex-widgets.js"></script>
    <script src="javascripts/cashflow-chart.js"></script>
    <script src="javascripts/transaction-chart.js"></script>
    <script src="javascripts/dashboard-income.js"></script>


    <!-- Socket IO-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.5/socket.io.js" integrity="sha512-2rUSTSAeOO02jF6eBqENNqPs1EohenJ5j+1dgDPdXSLz9nOlrr8DJk4zW/lDy8rjhGCSonW3Gx812XJQIKZKJQ==" crossorigin="anonymous"></script>
</head>

<body>

<!--MAIN CONTAINER-->

<div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <img src="/images/logo.svg" class="sidebar-logo"/>
            <img src="/images/icon.svg" class="sidebar-icon"/>
        </div>

        <ul class="list-unstyled components sidebar-links">
            <li class="{{#if dashboard}}active{{/if}}">
                <a href="/dashboard">
                    <i class="fab fa-bimobject"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="{{#if income}}active{{/if}}">
                <a href='/income'>
                    <i class="fas fa-hand-holding-usd"></i>
                    <span>Incomes</span>
                </a>
            </li>
            <li class="{{#if expense}}active{{/if}}">
                <a href="/expense">
                    <i class="fas fa-cash-register"></i>
                    <span>Expenses</span>
                </a>
            </li>
<!--            <li>-->
<!--                <a href="#">-->
<!--                    <i class="fas fa-chart-line"></i>-->
<!--                    <span>Assets</span>-->
<!--                </a>-->
<!--            </li>-->
<!--            <li>-->
<!--                <a href="#">-->
<!--                    <i class="fas fa-landmark"></i>-->
<!--                    <span>Liabilities</span>-->
<!--                </a>-->
<!--            </li>-->
            <li>
                <a href="#">
                    <i class="fas fa-file-invoice-dollar"></i>
                    <span>Reports</span>
                </a>
            </li>
            <li class="{{#if chat}}active{{/if}}">
                <a href="/chat">
                    <i class="fas fa-chart-bar"></i>
                    <span>Group Chat</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Content  -->
    <div id="content">
        <!-- Top Nav -->
        <div class="top-nav">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-top">
                        <i class="topicon fas fa-align-justify"></i>
                    </button>

                    <h3 id="navbar-title">{{{title}}}</h3>

                    <div id="rightElemenets">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#">{{user.first_name}} {{user.last_name}} - {{data.user_group.name}}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/logout" style="padding-left: 0 !important;">
                                <button class="btn btn-primary" style="padding: 3px">Log Out</button>
                                </a>
                            </li>
                            <li class="nav-item">
                               <img src="https://eu.ui-avatars.com/api/?name={{user.first_name}}+{{user.last_name}}&background={{user.colour}}&rounded=true&size=40&bold=true" class="mt-2"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <section id="main-section">

            {{{body}}}

        </section>

    </div>
</div>


<!-- Popper.JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
        integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
        crossorigin="anonymous"></script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"
        integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm"
        crossorigin="anonymous"></script>
<!--Datatables JS-->
<script src="javascripts/datatables.js"></script>





<script>
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            window.dispatchEvent(new Event('resize'));
        });
    });



</script>
</body>
</html>

